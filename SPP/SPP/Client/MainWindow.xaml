<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Button Content="Send" HorizontalAlignment="Left" Margin="450,0,0,20" VerticalAlignment="Bottom" Height="38" Width="120" Click="Send_Click"/>
        <TextBox x:Name="MessageBox" HorizontalAlignment="Left" Height="38" Width="400" Margin="25,0,0,20" Text="" TextWrapping="Wrap" VerticalAlignment="Bottom" />
        <TextBox x:Name="UserBox" HorizontalAlignment="Left" Margin="450,49,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="26"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="450,10,0,0" VerticalAlignment="Top" Width="120" Height="28"/>
        <ListBox x:Name="MessagesList" HorizontalAlignment="Left" Height="462" Margin="25,24,0,0" VerticalAlignment="Top" Width="400" SelectionChanged="MessagesList_SelectionChanged"/>
        <Button x:Name="PersonBtn" Content="Send to this person" HorizontalAlignment="Left" Height="29" Margin="450,93,0,0" VerticalAlignment="Top" Width="120" Click="Send_ClickPrivate"/>

    </Grid>
</Window>
